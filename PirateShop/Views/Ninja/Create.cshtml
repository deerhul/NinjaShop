@model PirateShop.Models.ViewModels.NinjaViewModel
@{
    ViewBag.Title = "Create A Ninja";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (@ViewData["AlertMsg"] != null)
{
    <script>
        alert('@ViewData["AlertMsg"]');
    </script>
}

<h2>Create a Ninja</h2>
@using (Html.BeginForm("Create", "Ninja"))
{

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Age)
        @Html.TextBoxFor(m => m.Age, new { @class = "form-control" })
    </div>

    @* Date of Birth ( to be implemented later ) *@
    @*<div class="form-group">
            @Html.LabelFor(m => m.DOB)
            @Html.TextBoxFor(m => m.DOB, new { @class = "form-control" })
        </div>*@

    <div class="form-group">
        @Html.LabelFor(m => m.Clan)
        @Html.DropDownListFor(m => m.Clan, new SelectList(Model.Clans, "ClanID", "ClanName"), "-Select Clan-" , new { @class = "form-control" })
    </div>

    @*<div class="form-group">
        @Html.LabelFor(m => m.Gender)
        @Html.DropDownListFor(m => m.Gender, new SelectList(Model.Genders, "ID", "gender"), new { @class = "form-control" })
    </div>*@

    <button type="submit" class="btn-primary"> Save </button>

}

